# PsychSync Localhost Development Environment
# Optimized for local development without Docker

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
DEBUG=True
ENVIRONMENT=development
PROJECT_NAME=PsychSync AI
APP_NAME=PsychSync
APP_VERSION=1.0.0

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
SECRET_KEY=psychsync-localhost-secret-key-change-in-production-32chars-min
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440
REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# DATABASE CONFIGURATION (Localhost)
# =============================================================================
DATABASE_URL=postgresql+asyncpg://psychsync_user:password@localhost:5432/psychsync_db
DB_HOST=localhost
DB_PORT=5432
DB_USER=psychsync_user
DB_PASSWORD=password
DB_NAME=psychsync_db
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_PRE_PING=True
DB_ECHO=False

# =============================================================================
# REDIS CONFIGURATION (Localhost)
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_SOCKET_TIMEOUT=5
REDIS_SOCKET_CONNECT_TIMEOUT=5
REDIS_MAX_CONNECTIONS=20

# =============================================================================
# CORS SETTINGS (Localhost Development)
# =============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:5174,http://127.0.0.1:5173
ALLOWED_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
ALLOWED_HEADERS=*
ALLOW_CREDENTIALS=True

# =============================================================================
# EMAIL CONFIGURATION (Development - using mailhog or console)
# =============================================================================
# For development, you can use:
# 1. MailHog (install with: brew install mailhog)
# 2. Console output (set SMTP_HOST to "console")
SMTP_HOST=console
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_TLS=False
SMTP_SSL=False

# =============================================================================
# FRONTEND URLS (Localhost)
# =============================================================================
FRONTEND_URL=http://localhost:5173
FRONTEND_PASSWORD_RESET_URL=http://localhost:5173/reset-password
FRONTEND_EMAIL_VERIFY_URL=http://localhost:5173/verify-email

# =============================================================================
# API SETTINGS
# =============================================================================
API_V1_STR=/api/v1
HOST=0.0.0.0
PORT=8000

# =============================================================================
# TESTING
# =============================================================================
TESTING=False

# =============================================================================
# MONITORING (Development)
# =============================================================================
SENTRY_DSN=
ENABLE_METRICS=False

# =============================================================================
# AI/ML SETTINGS
# =============================================================================
AI_ENABLED=False
AI_API_KEY=
AI_API_URL=

# =============================================================================
# CACHE SETTINGS (Localhost Development)
# =============================================================================
CACHE_ENABLED=True
CACHE_DEFAULT_EXPIRE=1800  # 30 minutes for development
CACHE_USER_EXPIRE=900      # 15 minutes
CACHE_ASSESSMENT_EXPIRE=1800  # 30 minutes
CACHE_TEAM_EXPIRE=900      # 15 minutes

# =============================================================================
# TEAM SETTINGS
# =============================================================================
MAX_TEAM_SIZE=50
MIN_TEAM_SIZE=2

# =============================================================================
# PAGINATION
# =============================================================================
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# =============================================================================
# DEVELOPMENT SPECIFIC SETTINGS
# =============================================================================
# Enable auto-reloading during development
AUTO_RELOAD=True

# Show SQL queries in logs (useful for debugging)
SQL_ECHO=False

# Enable debug toolbar (if installed)
DEBUG_TOOLBAR=False

# File upload settings (localhost)
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=10485760  # 10MB

# Static files serving (for development)
STATIC_DIR=./static
STATIC_URL=/static

# =============================================================================
# LOGGING (Localhost Development)
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=detailed
LOG_FILE=./logs/psychsync.log
LOG_ROTATION=daily
LOG_RETENTION=7