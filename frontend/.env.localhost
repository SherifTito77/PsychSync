# PsychSync Frontend Localhost Development Environment

# =============================================================================
# API CONFIGURATION (Localhost Backend)
# =============================================================================
VITE_API_BASE_URL=http://localhost:8000
VITE_API_URL=http://localhost:8000/api/v1

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
VITE_APP_NAME=PsychSync
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Psychological Assessment Platform
VITE_APP_ENVIRONMENT=development

# =============================================================================
# AUTHENTICATION SETTINGS
# =============================================================================
VITE_TOKEN_KEY=psychsync_token
VITE_REFRESH_TOKEN_KEY=psychsync_refresh_token
VITE_USER_KEY=psychsync_user

# =============================================================================
# UI/UX SETTINGS
# =============================================================================
VITE_DEFAULT_PAGE_SIZE=20
VITE_MAX_PAGE_SIZE=100
VITE_THEME=default
VITE_ANIMATION_ENABLED=true

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Enable hot module replacement
VITE_HMR=true

# Enable source maps for debugging
VITE_SOURCE_MAP=true

# Enable devtools
VITE_DEVTOOLS=true

# =============================================================================
# FEATURE FLAGS
# =============================================================================
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_SENTRY=false
VITE_ENABLE_DEBUG_MODE=true

# =============================================================================
# TIMEOUT SETTINGS (Localhost - faster for development)
# =============================================================================
VITE_API_TIMEOUT=10000
VITE_UPLOAD_TIMEOUT=30000

# =============================================================================
# CACHE SETTINGS
# =============================================================================
VITE_CACHE_ENABLED=true
VITE_CACHE_TTL=300000  # 5 minutes in milliseconds

# =============================================================================
# ROUTE SETTINGS
# =============================================================================
VITE_DEFAULT_ROUTE=/dashboard
VITE_LOGIN_ROUTE=/login
VITE_REGISTER_ROUTE=/register

# =============================================================================
# ASSETS AND MEDIA
# =============================================================================
VITE_MAX_FILE_SIZE=10485760  # 10MB
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# =============================================================================
# DEVELOPMENT SERVER
# =============================================================================
VITE_DEV_SERVER_PORT=5173
VITE_DEV_SERVER_HOST=localhost