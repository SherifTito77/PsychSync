# PsychSync Backend Development Environment (.env.dev)

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
DEBUG=True
ENVIRONMENT=development
PROJECT_NAME=PsychSync AI
APP_NAME=PsychSync
APP_VERSION=1.0.0

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
SECRET_KEY=your-secret-key-here-change-in-production-min-32-chars-psychsync-dev
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440
REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql+asyncpg://psychsync_user:password@localhost:5432/psychsync_db
DB_HOST=localhost
DB_PORT=5432
DB_USER=psychsync_user
DB_PASSWORD=password
DB_NAME=psychsync_db
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_PRE_PING=True
DB_ECHO=False

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_SOCKET_TIMEOUT=5
REDIS_SOCKET_CONNECT_TIMEOUT=5

# =============================================================================
# CORS SETTINGS (for localhost development)
# =============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:5174
ALLOWED_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
ALLOWED_HEADERS=*
ALLOW_CREDENTIALS=True

# =============================================================================
# EMAIL CONFIGURATION (Optional for development)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-gmail-app-password

# =============================================================================
# FRONTEND URLS
# =============================================================================
FRONTEND_URL=http://localhost:5173
FRONTEND_PASSWORD_RESET_URL=http://localhost:5173/reset-password
FRONTEND_EMAIL_VERIFY_URL=http://localhost:5173/verify-email

# =============================================================================
# TESTING
# =============================================================================
TESTING=False

# =============================================================================
# MONITORING
# =============================================================================
SENTRY_DSN=
ENABLE_METRICS=True

# =============================================================================
# AI/ML SETTINGS
# =============================================================================
AI_ENABLED=False
AI_API_KEY=
AI_API_URL=

# =============================================================================
# CACHE SETTINGS
# =============================================================================
CACHE_ENABLED=True
CACHE_DEFAULT_EXPIRE=3600
CACHE_USER_EXPIRE=1800
CACHE_ASSESSMENT_EXPIRE=3600
CACHE_TEAM_EXPIRE=1800

# =============================================================================
# TEAM SETTINGS
# =============================================================================
MAX_TEAM_SIZE=50
MIN_TEAM_SIZE=2

# =============================================================================
# PAGINATION
# =============================================================================
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100